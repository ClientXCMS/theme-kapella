{% for item in items %}

	<div class="col-xl-{{ item.col ? item.col : 3 }} col-sm-12 col-lg-{{ item.col ? item.col : 3 * 2 }} col-12 d-flex grid-margin stretch-card">
		<div class="card dashboard-{{ item.color }}">
			<div class="card-body">
				<h2 class="text-light mb-2 font-weight-bold">{{ item.value }}</h2>
				<h4 class="card-title mb-2"><i class="{{ item.icon }}"></i> {{ trans(item.name) }}</h4>
			</div>
		</div>
	</div>
{% endfor %}
